<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="horizontal"
    android:background="#000000"
    >


    <ImageView
        android:id="@+id/mickey"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:src="@drawable/mickey"
        android:scaleType="fitXY"
        android:padding="2dp"
        />
    <ImageView
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:src="@drawable/minny"
        android:padding="2dp"
        android:scaleType="fitXY"
        />
    <ImageView
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:src="@drawable/pluto"
        android:scaleType="fitXY"
        android:padding="2dp"
        />
    <ImageView
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_width="203dp"
        android:layout_height="124dp"
        android:src="@drawable/goofy"
        android:scaleType="fitXY"
        android:padding="2dp"
        />
    <ImageView
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_width="406dp"
        android:layout_height="124dp"
        android:src="@drawable/donaldduck"
        android:scaleType="fitXY"
        android:padding="2dp"

        />
    <ImageView
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_width="304dp"
        android:layout_height="124dp"
        android:src="@drawable/daisy"
        android:scaleType="fitXY"
        android:padding="2dp"

        />
    <ImageView
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_width="304dp"
        android:layout_height="124dp"
        android:src="@drawable/pete"
        android:layout_marginLeft="101dp"
        android:scaleType="fitXY"
        android:padding="2dp"

        />

</GridLayout>
